<Window x:Class="Quete2xaml.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quete2xaml"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Someones Names:" Target="{Binding ElementName=TextBox1}"/>
        <TextBox Name = "TextBox1"  Height = "20"  Margin = "20,0,20,320"/>
        <Button Name = "AddButton"  Height = "20"   Margin = "20,0,20,250" Click="AddSomeone_Click">Add Someone</Button>
        <ListBox Margin="20,100,20,10" Name="listBox1"  Height="280">
            <ListBoxItem Content="Infected 1"></ListBoxItem>
            <ListBoxItem Content="Infected 2"></ListBoxItem>
            <ListBoxItem Content="Infected 3"></ListBoxItem>
            <ListBoxItem Content="Infected 4"></ListBoxItem>
            <ListBoxItem Content="Infected 5"></ListBoxItem>
            <ListBoxItem Content="Infected 6"></ListBoxItem>
        </ListBox>
    </Grid>
</Window>
